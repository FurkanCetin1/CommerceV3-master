@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Register" asp-controller="Account" asp-area="Identity" class="btn btn-sm btn-primary">Yeni Kullanıcı</a>
</p>
<table class="table" id="tblRecords">
    <thead>
        <tr>
            <th class="text-nowrap all">Kullanıcı Adı</th>
            <th class="text-nowrap">E-posta Doğrulandı Mı?</th>
            <th class="text-nowrap all"  data-orderable="false">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@(item.EmailConfirmed?"Evet":"Hayır")</td>
                <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger text-nowrap">Sil</a></td>
            </tr>            
        }                   
    </tbody>
</table>

